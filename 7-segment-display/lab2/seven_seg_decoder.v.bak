module seven_seg_decoder (input [3:0] x, output [6:0] hex_LEDs);
	reg[6:2] top_5_segments;
	assign hex_LEDs[0] = (x == 4'b0001) ? 1'b1 : 
								(x == 4'b0100) ? 1'b1 :
								1'b0;
	assign hex_LEDs[1] = (x == 4'b0101) ? 1'b1 : 
								(x == 4'b0110) ? 1'b1 :
								1'b0;
	always @(*)
		begin
			top_5_segment[6] = (~x[0]&~x[1]&~x[2]&~x[3]) | (~x[0]&~x[1]&~x[2]&x[3]) | (~x[0]&x[1]&x[2]&x[3]) | (x[0]&~x[1]&x[2]&x[3]) | (x[0]&x[1]&x[2]&~x[3])
			top_5_segment[5] = (~x[0]&~x[1]&~x[2]&x[3]) | (~x[0]&x[1]&x[2]&~x[3]) | (~x[0]&~x[1]&x[2]&x[3])	   |   (~x[0]&x[1]&x[2]&x[3])  |
						   (x[0]&~x[1]&x[2]&~x[3])		| 	(x[0]&~x[1]&x[2]&x[3])	|
						   (x[0]&x[1]&~x[2]&~x[3])
			top_5_segment[4]    =		(~x[0]&~x[1]&~x[2]&x[3]) | (~x[0]&x[1]&x[2]&~x[3]) | (~x[0]&x[1]&~x[2]&~x[3])	   |   (~x[0]&x[1]&~x[2]&x[3])  |
						   (~x[0]&x[1]&x[2]&x[3])		| 	(x[0]&~x[1]&~x[2]&x[3])	|
						   (x[0]&~x[1]&x[2]&x[3])
			top_5_segment[3]    =		(~x[0]&~x[1]&~x[2]&x[3]) | (~x[0]&x[1]&~x[2]&~x[3]) | (~x[0]&x[1]&x[2]&x[3])	   |   (x[0]&~x[1]&x[2]&x[3])  |
						   (x[0]&x[1]&~x[2]&x[3])		
			top_5_segment[2]    =		(~x[0]&~x[1]&x[2]&~x[3]) | (x[0]&~x[1]&x[2]&~x[3]) | (x[0]&x[1]&~x[2]&~x[3])	   
		end
endmodule 